#!/bin/bash

OUTER=$0
shift

COUNT=$#

run()
{
    [ $COUNT != 0 ] || pause Press Enter to start $1
    $1
}

echo  Script of $OUTER on `cd ..;pwd`/script.log

if [ $# == 0 ] ; then
    echo Give an argument if no prompts should be given
fi

run parentheses
run detab

run createtxt
run ziptxt

run createhtml
run ziphtml

run createlatex
run createlatexus
run createpostscript
run createpdf

run ziplatex
run zipyo

echo DONE
